<p id="notice"><%= notice %></p>

<div class='container'>

<h1>Instructors</h1>

<br>
<%= button_to "Back to home", root_path, :class => "btn btn-primary", :method => :get %>
<br>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td class ='warning'><%= instructor.id %></td>
        <td class ='success'><%= instructor.first %></td>
        <td class ='success'><%= instructor.last %></td>
        <td class ='warning'><%= instructor.email %></td>
        <td><%= link_to 'Show', instructor %></td>
        <td ><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Instructor', new_instructor_path %>
