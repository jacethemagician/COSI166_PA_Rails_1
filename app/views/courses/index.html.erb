<p id="notice"><%= notice %></p>


<div class="container">
<h1>Courses</h1>
<br>
<%= button_to "Back to home", root_path, :class => "btn btn-primary", :method => :get %>
<br>
<table class="table table-striped table-bordered table-hover bg-dark" >
  <thead class="thead-light">
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Independent_study</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td class ='warning'><%= course.code %></td>
        <td class ='success'><%= course.name %></td>
        <td class ='success'><%= course.description %></td>
        <td class ='success'><%= course.independent_study %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Course', new_course_path %>
